{
  "parser": "babel-eslint",
  "extends": "airbnb-base",
  "env": {
    "node": true,
    "es6": true,
    "commonjs": true,
    "mocha": true
  },
  "plugins": ["babel"],
  "rules": {
    "no-console": 0,
    "strict": 0,

    "babel/generator-star-spacing": ["error", "after"],
    "babel/new-cap": 1,
    "babel/object-shorthand": 1,
    "babel/no-await-in-loop": 1,
    "babel/flow-object-type": 1,
    "babel/func-params-comma-dangle": 0,

    "import/no-extraneous-dependencies": ["error", {
      "devDependencies": ["!./test/**/*.js", "!./gulpfile.js"]
    }],

    "generator-star-spacing": 0,
    "new-cap": 0,
    "object-shorthand": 0,
    "arrow-parens": 0,
    "no-await-in-loop": 0,
    "flow-object-type": 0,
    "func-params-comma-dangle": 0,
  }
}
